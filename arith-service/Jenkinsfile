pipeline {
    agent any
    stages {
        stage('Compile') {
            steps {
                dir("arith-service"){
                    sh "mvnw clean compile"
                }
            }
        }
        stage('Unit-Test') {
            steps {
              dir("arith-service"){
                  sh "mvnw test"
              }
            }
        }
        stage('Integration-Test') {
            steps {

            }
        }
        stage('Package') {
            steps {
                dir("arith-service"){
                    sh "mvnw package"
                }
            }
        }
    }
}